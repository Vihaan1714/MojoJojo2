from hub import light_matrix
import runloop
import motor
from hub import motion_sensor
from hub import port
import distance_sensor
import motor_pair

async def main():

    motor_pair.unpair
    motor_pair.pair(motor_pair.PAIR_1, port.A, port.C)
    motor.run_for_degrees(port.B, 300, 360)
    await motor_pair.move_for_degrees(motor_pair.PAIR_1,548,0)
    await motor.run_for_degrees(port.B, -80, 360)
    await motor_pair.move_for_time(motor_pair.PAIR_1, 2000, 0,velocity=-1600)
    motor.run_for_degrees(port.B, 300, 360)
    motor_pair.move_for_time(motor_pair.PAIR_1, 2000, 0, velocity=-1600)



       

runloop.run(main())
